<Window x:Class="WMP_2.ClosePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMP_2"
        mc:Ignorable="d"
        Title="ClosePrompt" Height="150" Width="400" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="50" TextWrapping="Wrap">Would you like to save your work first?</TextBlock>

        <Button Name="SaveAndCloseBtn" Content="Save and Close" Height="20" Width="120" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="SaveAndCloseBtn_Click"/>
        <Button Name="CloseWithoutSavingBtn" Content="Close Without Saving" Height="20" Width="120" HorizontalAlignment="Center" VerticalAlignment="Bottom" Click="CloseWithoutSavingBtn_Click"/>
        <Button Name="CancelBtn" Content="Cancel" Height="20" Width="120" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="CancelBtn_Click"/>
    </Grid>
</Window>
