<Window x:Class="WMP_2.SavePrompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WMP_2"
        mc:Ignorable="d"
        Title="SavePrompt" Height="150" Width="250" WindowStyle="ToolWindow" ResizeMode="NoResize">
    <Grid>
        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" Height="50" TextWrapping="Wrap">Would you like to save your work first?</TextBlock>

        <Button Name="YesBtn" Content="Yes" Height="20" Width="100" HorizontalAlignment="Left" VerticalAlignment="Bottom" Click="YesBtn_Click"/>
        <Button Name="NoBtn" Content="No" Height="20" Width="100" HorizontalAlignment="Right" VerticalAlignment="Bottom" Click="NoBtn_Click"/>
    </Grid>
</Window>
